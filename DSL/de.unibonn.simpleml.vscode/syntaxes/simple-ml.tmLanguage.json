{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Simple-ML",
	"patterns": [
		{
			"include": "#comment"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"comment": {
			"patterns": [
				{
					"name": "comment.block.simpleml",
					"begin": "/\\*",
					"end": "\\*/"
				},
				{
					"name": "comment.line.double-slash.simpleml",
					"begin": "//",
					"end": "(?=$)"
				}
			]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.simple-ml",
				"match": "\\b(_|and|annotation|as|attr|callable|class|enum|false|fun|import|in|lambda|not|null|or|out|package|static|step|sub|super|true|union|val|vararg|where|workflow|yield)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.simple-ml",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.simple-ml",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.simpleml"
}
