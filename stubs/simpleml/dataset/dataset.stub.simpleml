package simpleml.dataset

class Dataset {
	fun sample(nInstances: Int) -> dataset: Dataset
	
	fun keepAttributes(vararg attributes: String) -> dataset: Dataset

	fun dropAttributes(vararg attributes: String) -> dataset: Dataset

	fun splitIntoTrainAndTest(trainRatio: Float, random_state: Int? or null) -> (dataset1: Dataset, dataset2: Dataset)
}

fun loadDataset(name: String) -> dataset: Dataset